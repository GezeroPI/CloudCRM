@model List<ApplicationUser>
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Collaborators"];
}


<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> @Localizer["Collaborators"]
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Localizer["fullname"]</th>
                        <th>@Localizer["email"]</th>
                        <th>@Localizer["phone"]</th>
                        <th colspan="2">@Localizer["action"]</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>@Localizer["fullname"]</th>
                        <th>@Localizer["email"]</th>
                        <th>@Localizer["phone"]</th>
                        <th colspan="2">@Localizer["action"]</th>
                    </tr>
                </tfoot>
                <tbody>

                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td align="center"><i class="fa fa-edit"></i></td>
                            <td align="center"><i class="fa fa-remove"></i></td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">@Localizer["updated"] @DateTime.Now</div>
</div>